  <audio id="audioPlayer"></audio>

  <script>
  // ÿßŸÑÿπÿØÿßÿØ
  let visitorCount = 160;
  if (localStorage.getItem("visitorCount")) {
    visitorCount = parseInt(localStorage.getItem("visitorCount")) + 1;
  }
  localStorage.setItem("visitorCount", visitorCount);
  document.getElementById("visitor-count").innerText = `${visitorCount}`;

  const musicBox = document.getElementById("musicBox");
  const songList = document.getElementById("songList");
  const audioPlayer = document.getElementById("audioPlayer");
  const currentSongImage = document.getElementById("currentSongImage");

  // ÿ•ÿ∏Ÿáÿßÿ± Ÿàÿ•ÿÆŸÅÿßÿ° ÿßŸÑŸÇÿßÿ¶ŸÖÿ©
  musicBox.addEventListener("click", () => {
    songList.classList.toggle("show");
  });

  let currentSong = null;

  function formatTime(sec) {
    if (isNaN(sec)) return "0:00";
    let m = Math.floor(sec / 60);
    let s = Math.floor(sec % 60);
    return `${m}:${s < 10 ? "0"+s : s}`;
  }

  document.querySelectorAll(".song").forEach(song => {
    const playBtn = song.querySelector(".song-play-btn");
    const restartBtn = song.querySelector(".song-restart-btn");
    const timeLabel = song.querySelector(".song-time");
    const progressFill = song.querySelector(".progress-fill");
    const src = song.getAttribute("data-src");
    const img = song.getAttribute("data-img");

    playBtn.addEventListener("click", () => {
      if (currentSong !== song) {
        // ÿ™ÿ¥ÿ∫ŸäŸÑ ÿ£ÿ∫ŸÜŸäÿ© ÿ¨ÿØŸäÿØÿ©
        audioPlayer.src = src;
        audioPlayer.play();
        currentSongImage.src = img;
        if (currentSong) {
          currentSong.querySelector(".song-play-btn").textContent = "‚ñ∂";
        }
        playBtn.textContent = "‚è∏";
        currentSong = song;
      } else {
        // ÿ™ÿ¥ÿ∫ŸäŸÑ/ÿ•ŸäŸÇÿßŸÅ
        if (audioPlayer.paused) {
          audioPlayer.play();
          playBtn.textContent = "‚è∏";
        } else {
          audioPlayer.pause();
          playBtn.textContent = "‚ñ∂";
        }
      }
    });

    restartBtn.addEventListener("click", () => {
      audioPlayer.currentTime = 0;
      if (currentSong === song) {
        audioPlayer.play();
        playBtn.textContent = "‚è∏";
      }
    });

    audioPlayer.addEventListener("timeupdate", () => {
      if (currentSong === song) {
        timeLabel.textContent = `${formatTime(audioPlayer.currentTime)} / ${formatTime(audioPlayer.duration)}`;
        let percent = (audioPlayer.currentTime / audioPlayer.duration) * 100;
        progressFill.style.width = percent + "%";
      }
    });

    audioPlayer.addEventListener("ended", () => {
      if (currentSong === song) {
        playBtn.textContent = "‚ñ∂";
        progressFill.style.width = "0%";
      }
    });
  });
  </script>
